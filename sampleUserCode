- actions.js
  const loadSampleUser = () => ({ type: LOAD_SAMPLE_USER });
  export const signInSampleUser = () => (dispatch) => {
  batch(() => {
  dispatch(loadSampleUser());
  dispatch(routeChangeAndResetError("home"));
  });
  };

